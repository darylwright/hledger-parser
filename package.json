{
  "name": "@jones.tristand/hledger-parser",
  "version": "0.2.1",
  "description": "A parser for ledger/hledger journal files based on Chevrotain",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/jonestristand/hledger-parser",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build:dev": "run-s clean generate:* build:tests:main build:tests:module",
    "build:prod": "run-s clean generate:* build:main build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:tests:main": "tsc -p tsconfig.tests.json",
    "build:tests:module": "tsc -p tsconfig.tests.module.json",
    "clean": "rimraf ./build",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "generate": "run-p generate:*",
    "generate:types": "ts-node ./tools/generate_types.ts",
    "generate:diagram": "ts-node ./tools/generate_diagram.ts",
    "test": "run-s build:dev test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc ava",
    "check-cli": "run-s test diff-integration-tests check-integration-tests",
    "check-integration-tests": "run-s check-integration-test:*",
    "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
    "watch:build": "tsc -p tsconfig.tests.json -w",
    "watch:test": "nyc --silent ava --watch",
    "cov": "run-s build:dev test:unit cov:html cov:lcov && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "cov:send": "run-s cov:lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 95 --functions 95 --branches 95",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "commit": "git cz",
    "reset-hard": "git clean -dfx && git reset --hard && npm i",
    "prepare-release": "run-s reset-hard test cov:check clean doc:html build:prod version doc:publish"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "chevrotain": "^10.2.0",
    "lodash": "^4.17.21",
    "luxon": "^3.0.1"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/lodash": "^4.14.182",
    "@types/luxon": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "ava": "^3.12.1",
    "codecov": "^3.5.0",
    "commitizen": "^4.2.5",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "gh-pages": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^6.0.1",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.0.0",
    "ts-node": "^9.1.1",
    "typedoc": "^0.23.10",
    "typescript": "^4.7.4"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": false,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      }
    },
    "files": [
      "src/__tests__/*.test.ts",
      "!build/module/**"
    ],
    "verbose": true
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.test.js",
      "**/__tests__"
    ]
  }
}
